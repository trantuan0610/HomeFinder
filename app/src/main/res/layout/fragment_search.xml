<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen.search.SearchFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Tìm theo quận,thành phố..." />
        <TextView
            android:id="@+id/tvHiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch Sử tìm kiếm: \n Hoàng Mai \n 108 Nghĩa Đô \n Mai Dịch, Hà Nội"
            android:layout_below="@+id/searchView"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_searchRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:layout_below="@+id/searchView"/>


    </RelativeLayout>

</FrameLayout>