<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen.search.SearchFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tìm Kiếm"
                android:textColor="@color/blue"
                android:textSize="20sp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSearchAdv"
                android:background="@drawable/ic_filter"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey" />


        </RelativeLayout>
    <LinearLayout
        android:id="@+id/man1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Tìm theo quận,thành phố..."
            android:background="@drawable/background_search_view"
            app:iconifiedByDefault="false"
            android:layout_margin="5dp"
            android:elevation="20dp"
            />
        <TextView
            android:id="@+id/tvHiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mẹo: \n -Bạn có thể tìm kiếm theo từ khoá oặc địa chỉ cụ thể\n -Bạn cũng có thể tìm kiếm theo phường, quận, thành phố \n -Tìm kiếm thêm xung quanh khu vực bạn cần tìm nếu không tìm được trọ ưng ý nhé! \n -Chủ động liên lạc với chủ trọ trước khi qua xem!.. \n   "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_searchRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/man2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint = "Nhập tên quận,thành phố..."
                android:background="@drawable/background_search_view"
                android:layout_margin="10dp"
                android:elevation="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Loại phòng:"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Loại phòng trọ"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    >
                    <AutoCompleteTextView
                        android:id="@+id/auto_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Diện tích:"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edtAreaMin"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edt_border"
                        android:textSize="16sp"
                        android:hint="Từ:"
                        />
                    <EditText
                        android:id="@+id/edtAreaMax"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edt_border"
                        android:textSize="16sp"
                        android:hint="Đến:"
                        android:layout_marginStart="90dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="m2"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Mức giá:"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edtPriceMin"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edt_border"
                        android:textSize="16sp"
                        android:hint="Từ:"
                        />
                    <EditText
                        android:id="@+id/edtpriceMax"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/edt_border"
                        android:textSize="16sp"
                        android:hint="Đến:"
                        android:layout_marginStart="90dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Đ"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Áp Dụng"
                    android:layout_margin="20dp"
                    />
                <Button
                    android:id="@+id/btnHuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huỷ bỏ"
                    />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_searchAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>