<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen.account.myRoom.DetailMyRoomActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bold"
                    android:text="Phòng đã đăng"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_below="@id/toolbar"
                />

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng trọ full nội thất giá đep"
                android:textColor="@color/blue"
                android:textSize="18sp" />
            <LinearLayout
                android:id="@+id/rltAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/viewAddress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_location" />

                <TextView
                    android:id="@+id/tvRoomAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="122 Định Công Hoàng Mai Hà Nội"
                    android:textColor="@color/black"
                    android:textSize="14sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rltArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/view2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/photo_sizel"

                    />
                <TextView
                    android:id="@+id/tvRoomArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view2"
                    android:text="30 m2"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginEnd="30dp"
                    />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Đăng:"
                    android:textColor="@color/black"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/view3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_local_phone_24"

                    />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuấn 0852482628"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <View
                    android:id="@+id/view4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_star_xanh"

                    />

                <TextView
                    android:id="@+id/tvRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá:"
                    android:textColor="@color/black"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:id="@+id/tvLoaiPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại phòng:"
                    android:textColor="@color/black"
                    android:layout_marginEnd="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tvShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang Hiện"
                    android:background="@drawable/edt_border_xanh"
                    android:paddingVertical="5dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:paddingHorizontal="8dp"
                    />
                <TextView
                    android:id="@+id/tvHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang Ẩn"
                    android:background="@drawable/edt_border_vang"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/black"
                    android:paddingVertical="5dp"
                    />

            </LinearLayout>




            <TextView
                android:id="@+id/tvdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Mô tả chi tiết"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDetailDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng rất đẹp, sang trọng"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_TienIch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiện ích phòng"
                android:textColor="@color/blue" />

            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlt_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_TienIch"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wifi_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_wifi_on"
                        android:text="Wifi"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wifi_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_wifi_off"
                        android:text="Wifi"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_fridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/fridge_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_tulanh"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/fridge_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_tulanh_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_kitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/kitchen_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_bep"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/kitchen_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_bep_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_TienIch"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/rlt_wc"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/free_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_free"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/free_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_free_off"
                        android:textColor="@color/black"
                        android:visibility="gone"

                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:orientation="horizontal"
                android:id="@+id/ln2">

                <RelativeLayout
                    android:id="@+id/rlt_wc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wc_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_wc_on"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wc_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_wc_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_airConditional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/airConditional_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/icon_dieuhoa_on"
                        android:text="Điều \nhoà"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/airConditional_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/icon_dieuhoa_off"
                        android:text="Wifi"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_washingMachine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/washingMachine_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_may_giat"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/washingMachine_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_may_giat_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/parking_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_giuxe"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/parking_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_giuxe_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/ln2"

                />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/blue"
        android:src="@drawable/ic_more" />
</RelativeLayout>