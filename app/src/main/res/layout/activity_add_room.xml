<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainscreen.home.AddRoom.AddRoomActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Huỷ"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/tvQuayLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="Quay Lại"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="Đăng Tin"
            android:textColor="@color/blue"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:text="Đăng"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvTiep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:text="Tiếp tục"
            android:textColor="@color/blue"
            android:textSize="15sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/man2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:visibility="gone"
        android:layout_margin="12dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:background="@drawable/border_layout"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm hình ảnh cho bài đăng:"
                android:textColor="@color/blue"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addanh"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:background="@drawable/border_layout"
                    android:layout_margin="4dp"
                    />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addanh"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:background="@drawable/border_layout"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addanh"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:background="@drawable/border_layout"
                    android:layout_margin="4dp"
                    />
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addanh"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:background="@drawable/border_layout"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addanh"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:background="@drawable/border_layout"
                    android:layout_margin="4dp"
                    />
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/addanh"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:background="@drawable/border_layout"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Bằng việc tiếp tục nghĩa là bạn đã đồng ý với các Điều khoản và Chính Sách của chúng tôi "
            android:textStyle="italic"
            android:textColor="@color/blue"
            />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/man1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Tiêu đề bài đăng:"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtRoomTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edt_border"
                android:hint="Nhập tiêu đề bài đăng"
                android:padding="10dp"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Địa Chỉ:"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtRoomAddress"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edt_border"
                android:hint="Số nhà, tên đường, phường/xã, quận/huyện, tỉnh/TP"
                android:padding="10dp"

                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Giá Phòng(VND):"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edt_border"
                android:hint="3000000"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Diện Tích(m2)"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtArea"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edt_border"
                android:hint="30"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Mô tả chi tiết:"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtDes"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edt_border"
                android:gravity="start"
                android:padding="10dp"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Liên hệ với chủ:"
                android:textSize="16sp"
                android:textColor="@color/grey_dam"
                />
            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edt_border"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Số Điện Thoại(liên lạc):"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/edt_border"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Tiện ích phòng:"
                android:textColor="@color/grey_dam"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_TienIch"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlt_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_TienIch"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wifi_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_wifi_on"
                        android:text="Wifi"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wifi_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_wifi_off"
                        android:text="Wifi"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_fridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlt_wifi"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/fridge_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_tulanh"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/fridge_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_tulanh_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_kitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/kitchen_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_bep"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/kitchen_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_bep_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_TienIch"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/rlt_wc"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/free_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_free"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/free_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_free_off"
                        android:textColor="@color/black"
                        android:visibility="gone"

                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlt_wc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wc_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_wc_on"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/wc_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_wc_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_airConditional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/airConditional_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:src="@drawable/ic_dieuhoa"
                        />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/airConditional_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:src="@drawable/ic_dieuhoa_off"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_washingMachine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/washingMachine_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_may_giat"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/washingMachine_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_may_giat_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_parking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/parking_on"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich"
                        android:src="@drawable/ic_giuxe"
                        android:textAllCaps="false"
                        android:textColor="@color/blue" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/parking_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/border_btn_tienich_off"
                        android:gravity="center"
                        android:src="@drawable/ic_giuxe_off"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Loại phòng trọ"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                >
                <AutoCompleteTextView
                    android:id="@+id/auto_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>