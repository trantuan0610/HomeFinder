<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/bold"
                android:text="Danh sách phòng cho thuê"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_dontlike"
                android:visibility="gone"
                />
            <ImageButton
                android:id="@+id/dontlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like2"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />

        </RelativeLayout>


    <ImageView
        android:id="@+id/imgRoom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:scaleType="fitXY"
        android:src="@drawable/room1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phòng trọ full nội thất giá đep"
        android:layout_below="@+id/imgRoom"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:fontFamily="@font/bold"
        />
    <View
        android:id="@+id/viewAddress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_location"
        android:layout_below="@+id/tvtitle"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvRoomAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtitle"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/viewAddress"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="122 Định Công Hoàng Mai Hà Nội"
        android:textColor="@color/black"
        android:textSize="14sp"

        />

    <TextView
        android:id="@+id/tvRoomArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 m2"
        android:textColor="@color/black"
        android:layout_below="@id/tvRoomAddress"
        android:layout_toRightOf="@+id/view2"
        android:textSize="14sp"
        android:layout_marginTop="15dp"

        />

    <View
        android:id="@+id/view2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvRoomAddress"
        android:layout_marginTop="15dp"
        android:background="@drawable/photo_sizel"

        />

    <View
        android:id="@+id/view3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/view2"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_baseline_local_phone_24"

        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/view3"
        android:text="Mô tả chi tiết"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả chi tiết"
        android:textSize="14sp"
        android:layout_below="@id/view3"
        android:textColor="@color/blue"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tvDetailDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="chi tiêt nè"
        android:layout_below="@+id/tvdes"
        android:textSize="14sp"
        android:textColor="@color/black"
        />



</RelativeLayout>