<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_top_corners_round"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginHorizontal="70dp"
            android:background="@color/gray_btn_bg_color" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_phone"
                android:text="Gọi điện" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View style="@style/DividerLine" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_message"
                android:text="Nhắn tin" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View style="@style/DividerLine" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_map" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Chỉ đường" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View style="@style/DividerLine" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star1" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_star_xanh"
                android:text="Đánh giá" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View style="@style/DividerLine" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dangerous" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/ScreenNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_dangerous"
                android:text="Báo cáo bài đăng" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View style="@style/DividerLine" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/border_btn"
            android:textColor="@color/white"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="12dp"
            android:text="Huỷ"
            tools:ignore="MissingConstraints" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>