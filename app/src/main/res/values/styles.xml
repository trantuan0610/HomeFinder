<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="OrangeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/border_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NavigationMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_btn_bg_color</item>
    </style>
    <style name="OrangeBorderButton" parent="OrangeButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/bg_finished_task</item>
    </style>
    <style name="BlueBorderButton" parent="OrangeButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/bg_finished_task</item>
    </style>


</resources>